{
  "name": "autofold-extension",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "node scripts/build.mjs",
    "dev": "node scripts/build.mjs --dev",
    "clean": "rm -rf autofold dist",
    "verify": "node scripts/verify-build.mjs",
    "test": "npm run build && npm run verify",
    "test:leaks": "node test-leaks.js",
    "test:runtime": "node test-runtime-simulation.js",
    "test:minified": "node test-minified.js",
    "test:auth": "node test-auth-integration.cjs",
    "test:all": "npm run test:leaks && npm run test:runtime",
    "test:full": "npm run test:leaks && npm run test:runtime && npm run test:minified"
  },
  "devDependencies": {
    "esbuild": "^0.19.0"
  }
}

